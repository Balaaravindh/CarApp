<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/employee_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header_search_list"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/employee_category_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/employee_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/carimageplaceholder" />

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/employee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/employee_image"
            android:text="Johnxxxxx"
            android:textSize="16dp"
            android:textStyle="bold"
            app:font="sanz.ttf" />

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/employee_mobilenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/employee_image"
            android:text="mobilenum"
            android:textSize="14dp"
            android:textStyle="bold"
            app:font="sanz.ttf" />

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/employee_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_mobilenum"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/employee_image"
            android:text="email@gmail.com"
            android:textSize="14dp"
            android:textStyle="bold"
            app:font="sanz.ttf" />

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/employee_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_email"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/employee_image"
            android:text="besent nagar"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            app:font="sanz.ttf" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

