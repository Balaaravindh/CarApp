<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/category_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/car_list_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/car_iamge" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/car_list_image"
            android:layout_toRightOf="@+id/car_list_image"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/fundingcar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="15"
                    android:text="Hundai i10 Era"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:font="sanz.ttf" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/fundingcar_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fundingcar_name"
                    android:layout_marginTop="5dp"
                    android:text="Rs. 40000"
                    android:textSize="12dp"
                    app:font="sanz.ttf" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/funding_car_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fundingcar_rate"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:text="1992 Km | Petrol | 2015 | 2 owners"
                    android:textSize="12dp"
                    app:font="sanz.ttf" />

            </RelativeLayout>


            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/funding_ready_for_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rupee"
                android:text="Ready For Sale"
                android:textSize="12dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                app:font="sanz.ttf" />


            <CheckBox
                android:id="@+id/car_select"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>