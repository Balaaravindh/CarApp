<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">


    <!--Header-->
    <RelativeLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#173E84"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/bussiness_profile_mnav"
            android:layout_width="25dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back_arrow" />

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/dealer_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Bussiness Profile"
            android:textColor="#FFF"
            android:textSize="16dp"
            app:font="sanz.ttf" />


    </RelativeLayout>

    <ListView
        android:id="@+id/bussiness_profile_car_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_search_list"
        android:listSelector="#FFF"
        android:scrollbars="none" />

</RelativeLayout>