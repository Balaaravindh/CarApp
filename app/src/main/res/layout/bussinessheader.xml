<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cover_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/carimageplaceholder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="47dp"
            android:background="#80000000"
            android:orientation="horizontal">

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/edit_cover_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Edit"
                android:textColor="#FFF"
                android:textSize="15dp"
                app:font="sanz.ttf" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/camera" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="125dp"
            android:background="@drawable/shadow"
            android:gravity="center">

            <ImageView
                android:id="@+id/profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/carimageplaceholder" />
        </LinearLayout>


    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/dealer_plus_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="Dealer Plus Manager"
            android:textColor="#173E84"
            android:textSize="18dp"
            android:textStyle="bold"
            app:font="sanz.ttf" />

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/dealership_plus_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="Dealership Manager"
            android:layout_below="@+id/dealer_plus_manager"
            android:textColor="#173E84"
            android:textSize="18dp"
            android:textStyle="bold"
            app:font="sanz.ttf" />

        <ImageView
            android:id="@+id/verified_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dealer_plus_manager"
            android:src="@drawable/verified"
            android:visibility="gone" />


    </RelativeLayout>

    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
        android:id="@+id/dealer_plus_manager_landline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0440444044"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="16dp"
        app:font="sanz.ttf" />

    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
        android:id="@+id/dealer_plus_manager_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="No 6 Rajivgandhi street, Erukancherry, Chennai"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="16dp"
        app:font="sanz.ttf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.0"
        android:background="#EBEBF1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/share_main_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:src="@drawable/fly" />

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/share_on_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="Share On:"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="16dp"
            app:font="sanz.ttf" />

        <ImageView
            android:id="@+id/facebook_share_image"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/twitter_share_image"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/lkendin_share_image"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:src="@drawable/linked" />

        <ImageView
            android:id="@+id/lkendin_web_image"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:src="@drawable/webicon" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="#EBEBF1">

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#EBEBF1"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="#173E84"
            android:textSize="16dp"
            app:font="sanz.ttf" />

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/document_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#EBEBF1"
            android:text="Document"
            android:textAllCaps="false"
            android:textColor="#173E84"
            android:textSize="16dp"
            app:font="sanz.ttf" />

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="#EBEBF1"
            android:text="Profile"
            android:textAllCaps="false"
            android:textColor="#173E84"
            android:textSize="16dp"
            app:font="sanz.ttf" />

    </RelativeLayout>

</LinearLayout>
