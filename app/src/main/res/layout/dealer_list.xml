<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/category_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/queryimage1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/chola" />

        <RelativeLayout
            android:id="@+id/text_lay_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/queryimage1"
            android:orientation="vertical">


            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/dealer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Aravindh Kumar"
                android:textSize="16dp"
                android:textStyle="bold"
                app:font="sanz.ttf" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/dealer_cars_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dealer_name"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:text="Aravindh Cars"
                android:textSize="14dp"
                app:font="sanz.ttf" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/dealer_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dealer_cars_name"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:text="0000000000"
                android:textSize="14dp"
                app:font="sanz.ttf" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/dealer_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dealer_mobile_number"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:text="aravindh@gmail.com"
                android:textSize="14dp"
                app:font="sanz.ttf" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/dealer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dealer_email"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:text="Chennai"
                android:textSize="14dp"
                app:font="sanz.ttf" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                android:id="@+id/car_count"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="#FA2608"
                android:text="21 Cars"
                android:textColor="#FFF"
                android:textSize="14dp"
                app:font="sanz.ttf" />


        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>