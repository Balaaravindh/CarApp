<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bt_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/search_city_spinner"
        android:background="#173E84"
        android:gravity="center">

        <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
            android:id="@+id/alert_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/chat"
            android:text="Alert"
            android:textAllCaps="false"
            android:textColor="#173E84"
            android:textSize="14dp"
            app:font="sanz.ttf" />

        <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
            android:id="@+id/queries_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/alert_btn"
            android:background="@drawable/alert"
            android:text="Queries"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="14dp"
            app:font="sanz.ttf" />

    </RelativeLayout>

    <ListView
        android:id="@+id/nav_list_view_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bt_layout"
        android:background="#FFF"
        android:divider="@android:color/transparent" />

</RelativeLayout>


