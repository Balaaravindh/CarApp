<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="#173E84"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_image_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_avatar"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Johnson Johnson"
            android:textColor="#FFF"
            android:textSize="20dp"
            app:font="sanz.ttf" />

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/profile_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_name"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:text="Chennai, TamilNadu"
            android:textColor="#FFF"
            android:textSize="12dp"
            app:font="sanz.ttf" />

        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:src="@drawable/default_avatar" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/header_image_name_layout"
        android:background="#808080" />

    <ListView
        android:id="@+id/nav_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="5dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="21.0sp"
        android:listSelector="#173E84" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/call_layout"
            android:layout_width="60dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/call_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/contact1" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/contact_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/call_image"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="Call"
                android:textColor="#FFF"
                android:textSize="15dp"
                app:font="sanz.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chat_layout"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/help_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/chat_menubar" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/help_support_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/help_image"
                android:layout_centerHorizontal="true"
                android:text="Help"
                android:textColor="#FFF"
                android:textSize="15dp"
                app:font="sanz.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/logout_layout"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/log_out_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logout_sidemenu" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/log_out_image"
                android:layout_centerHorizontal="true"
                android:text="Logout"
                android:textColor="#FFF"
                android:textSize="15dp"
                app:font="sanz.ttf" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>