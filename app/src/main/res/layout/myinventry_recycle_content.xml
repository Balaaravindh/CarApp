<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/sell_category_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sell_image_footer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/car_iamge" />

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/sell_mtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12050151"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="13dp"
            android:layout_marginBottom="5dp"
            app:font="sanz.ttf" />

    </LinearLayout>

</LinearLayout>