<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/category_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/queryimage1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/car_iamge" />

        <LinearLayout
            android:id="@+id/text_lay_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/queryimage1"
            android:orientation="vertical">


            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/query_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Aravindh Kumar"
                android:textSize="14dp"
                app:font="sanz.ttf" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/query_car_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:text="Audi 3s"
                android:textSize="12dp"
                app:font="sanz.ttf" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/query_car_details"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:maxLines="1"
                    android:text="Is there  2016 model available with you"
                    android:textSize="12dp"
                    app:font="sanz.ttf" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/query_car_details"
                    android:layout_marginTop="3dp">

                    <ImageView
                        android:id="@+id/queriestime"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/queriestime" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/query_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@+id/queriestime"
                        android:text="26.11.2016 12:56:09"
                        android:textSize="12dp"
                        app:font="sanz.ttf" />

                </RelativeLayout>

                <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                    android:id="@+id/listing_id"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/query_car_details"
                    android:background="#173E84"
                    android:textSize="12dp"
                    android:textColor="#FFF"
                    app:font="sanz.ttf"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="Listing"/>

            </RelativeLayout>




        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>