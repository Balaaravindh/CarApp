<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <!--Header-->
    <RelativeLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#173E84"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nav_emi"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/nav_icon" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/title_saved_cars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="EMI Calculator"
                android:textColor="#FFF"
                android:textSize="18dp"
                app:font="sanz.ttf" />

            <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                android:id="@+id/nav_tick"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="#173E84"
                android:text="Apply"
                android:textColor="#FFF"
                app:font="sanz.ttf" />

        </RelativeLayout>

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cardddds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_search_list"
        android:layout_marginBottom="55dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1.0"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                    android:id="@+id/monthly_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monthly Payment"
                                    android:textColor="#173E84"
                                    android:textSize="16dp"
                                    app:font="sanz.ttf" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                        android:id="@+id/rupee_symnol"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="\u20B9"
                                        android:textColor="#000"
                                        android:textSize="16dp"
                                        app:font="sanz.ttf" />

                                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                        android:id="@+id/monthly_payment_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="5dp"
                                        android:text="0"
                                        android:textColor="#000"
                                        android:textSize="16dp"
                                        app:font="sanz.ttf" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                    android:id="@+id/total_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Payment"
                                    android:textColor="#173E84"
                                    android:textSize="16dp"
                                    app:font="sanz.ttf" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                        android:id="@+id/rupee_symol"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="\u20B9"
                                        android:textColor="#000"
                                        android:textSize="16dp"
                                        app:font="sanz.ttf" />

                                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                        android:id="@+id/total_payment_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="5dp"
                                        android:text="0"
                                        android:textColor="#000"
                                        android:textSize="16dp"
                                        app:font="sanz.ttf" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1.0"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">


                                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                    android:id="@+id/total_intrest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Interest %"
                                    android:textColor="#173E84"
                                    android:textSize="16dp"
                                    app:font="sanz.ttf" />

                                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                    android:id="@+id/intrest_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="0 %"
                                    android:textColor="#000"
                                    android:textSize="16dp"
                                    app:font="sanz.ttf" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                    android:id="@+id/no_of_terms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Number of Terms"
                                    android:textColor="#173E84"
                                    android:textSize="16dp"
                                    app:font="sanz.ttf" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                        android:id="@+id/no_of_month_yaers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="0"
                                        android:textColor="#000"
                                        android:textSize="16dp"
                                        app:font="sanz.ttf" />

                                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                        android:id="@+id/no_of_month"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="5dp"
                                        android:text="Months"
                                        android:textColor="#000"
                                        android:textSize="16dp"
                                        app:font="sanz.ttf" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/loan_amount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/payment"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_amount_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loan Amount"
                        android:textColor="#173E84"
                        android:textSize="16dp"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CEditText
                        android:id="@+id/loan_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Loan Amount"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/intrest_percent_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/loan_amount_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/rate_of_intrest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate of Intrest (APR) %"
                        android:textColor="#173E84"
                        android:textSize="16dp"
                        app:font="sanz.ttf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.0"
                        android:orientation="horizontal">

                        <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                            android:id="@+id/minus_button"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button_border_emi"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#38B2E7"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:layout_weight="1.0"
                            android:background="@drawable/button_border_emi"
                            android:gravity="center">


                            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                android:id="@+id/increment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Interest:"
                                android:textColor="#38B2E7"
                                android:textSize="16dp"
                                app:font="sanz.ttf" />

                            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                android:id="@+id/increment_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="0"
                                android:textColor="#38B2E7"
                                android:textSize="16dp"
                                app:font="sanz.ttf" />

                            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:text="%"
                                android:textColor="#38B2E7"
                                android:textSize="16dp"
                                app:font="sanz.ttf" />

                        </LinearLayout>


                        <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                            android:id="@+id/plus_button"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button_border_emi"
                            android:text="+"
                            android:textColor="#38B2E7"
                            android:textSize="20dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/intrest_percent_layout"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/no_terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Terms"
                        android:textColor="#173E84"
                        android:textSize="16dp"
                        app:font="sanz.ttf" />

                    <LinearLayout
                        android:id="@+id/buttons_month_years"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.0">

                        <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                            android:id="@+id/month"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_weight="1.0"
                            android:background="@drawable/budget_model"
                            android:text="Month"
                            android:textAllCaps="false"
                            android:textColor="#FFF"
                            app:font="robotoregular.ttf" />

                        <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                            android:id="@+id/year"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_weight="1.0"
                            android:background="@drawable/by_model"
                            android:text="Year"
                            android:textAllCaps="false" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.0"
                        android:orientation="horizontal">

                        <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                            android:id="@+id/minus_button_month_year"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button_border_emi"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#38B2E7"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:layout_weight="1.0"
                            android:background="@drawable/button_border_emi"
                            android:gravity="center">


                            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                android:id="@+id/increment_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Month:"
                                android:textColor="#38B2E7"
                                android:textSize="16dp"
                                app:font="sanz.ttf" />

                            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                android:id="@+id/increment_button_month_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="0"
                                android:textColor="#38B2E7"
                                android:textSize="16dp"
                                app:font="sanz.ttf" />

                        </LinearLayout>


                        <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                            android:id="@+id/plus_button_month_year"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button_border_emi"
                            android:text="+"
                            android:textColor="#38B2E7"
                            android:textSize="20dp" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_emi_funding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#173E84"
        android:scrollbars="none" />


</RelativeLayout>