<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_viewss"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/car_image_myinventry"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/carimageplaceholder" />

                <LinearLayout
                    android:id="@+id/layout_myinven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/car_image_myinventry"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/myinventry_car_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="Hyundai i10"
                            android:textSize="16dp"
                            app:font="sanz.ttf" />

                    </RelativeLayout>

                    <!--Rupee and Rate-->
                    <RelativeLayout
                        android:id="@+id/rupeeandrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/myinventry_car_rate_rupee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="\u20B9"
                            android:textSize="16dp"
                            app:font="sanz.ttf" />

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/myinventry_car_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/myinventry_car_rate_rupee"
                            android:text="5,50,000 - Live"
                            android:textSize="16dp"
                            app:font="sanz.ttf" />


                    </RelativeLayout>

                    <!--kms petrol year owners-->
                    <RelativeLayout
                        android:id="@+id/kms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <RelativeLayout
                            android:id="@+id/details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                android:id="@+id/myinventory_kms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="1200 | Petrol | 2001 | 2"
                                android:textSize="12dp"
                                app:font="sanz.ttf" />


                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="4">

                <LinearLayout
                    android:id="@+id/imagecount"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/photo_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/photo" />

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/photo_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/photo_image"
                            android:text="2"
                            android:textSize="12dp"
                            app:font="sanz.ttf" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/documentcount"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/document_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/document" />

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/document_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/document_image"
                            android:text="2"
                            android:textSize="12dp"
                            app:font="sanz.ttf" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/videocount"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/video_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/videos" />

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/video_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/video_image"
                            android:text="2"
                            android:textSize="12dp"
                            app:font="sanz.ttf" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewscount"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/view_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/vies" />

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/view_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/view_image"
                            android:text="2"
                            android:textSize="12dp"
                            app:font="sanz.ttf" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Status"
                android:textColor="#000"
                android:textSize="15dp"
                app:font="sanz.ttf" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

                <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                    android:id="@+id/sold_full"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#173E84"
                    android:text="Sold"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:visibility="gone"
                    app:font="sanz.ttf" />

                <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                    android:id="@+id/delete_full"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#FF0000"
                    android:text="Deleted"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:visibility="gone"
                    app:font="sanz.ttf" />

                <LinearLayout
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0"
                    android:visibility="gone">

                    <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                        android:id="@+id/draft"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/buttons_chage"
                        android:text="Draft"
                        android:textAllCaps="false"
                        android:textColor="#173E84"
                        android:textSize="14dp"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                        android:id="@+id/for_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/buttons_chage"
                        android:text="For Sale"
                        android:textAllCaps="false"
                        android:textColor="#173E84"
                        android:textSize="14dp"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                        android:id="@+id/live"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/buttons_chage"
                        android:text="Live"
                        android:textAllCaps="false"
                        android:textColor="#173E84"
                        android:textSize="14dp"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                        android:id="@+id/sold"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/buttons_chage"
                        android:text="Sold"
                        android:textAllCaps="false"
                        android:textColor="#173E84"
                        android:textSize="14dp"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/buttons_chage"
                        android:text="Delete"
                        android:textAllCaps="false"
                        android:textColor="#173E84"
                        android:textSize="14dp"
                        app:font="sanz.ttf" />


                </LinearLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#DCDCDC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/post"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">

                        <ImageView
                            android:id="@+id/post_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical" />

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/post_text"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:text="Post"
                            android:textColor="#173E84"
                            android:textSize="16dp"
                            app:font="sanz.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0">

                        <ImageView
                            android:id="@+id/edit_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical" />

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:text="Edit"
                            android:textColor="#173E84"
                            android:textSize="16dp"
                            app:font="sanz.ttf" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/preview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">

                        <ImageView
                            android:id="@+id/preview_Image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical" />

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/preview_text"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical"
                            android:text="Preview"
                            android:textColor="#173E84"
                            android:textSize="16dp"
                            app:font="sanz.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/market"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.0">

                        <ImageView
                            android:id="@+id/market_Image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/marketgray"/>

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/market_text"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical"
                            android:text="Market"
                            android:textColor="#C0C0C0"
                            android:textSize="16dp"
                            app:font="sanz.ttf" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

