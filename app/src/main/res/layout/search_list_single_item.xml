<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:padding="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/totallayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">

        <RelativeLayout
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/car_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/carimageplaceholder" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="#80000000"
                        android:gravity="right">

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/posted_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="posted 8 days ago"
                            android:textColor="#FFF"
                            android:textSize="12dp"
                            app:font="sanz.ttf"  />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:gravity="right">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/camera" />

                                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                    android:id="@+id/noofimages"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="center"
                                    android:text="4"
                                    android:textColor="#FFF"
                                    android:textSize="14dp"
                                    app:font="sanz.ttf" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                            android:id="@+id/car_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:text="Ferrari - ZR 65 DXXXXXXXXXXXXXXXXXXX"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:font="sanz.ttf"  />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="3dp">

                            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                android:id="@+id/rupee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&#x20B9;"
                                android:textSize="14dp"
                                app:font="sanz.ttf" />

                            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                android:id="@+id/car_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="40,000,000"
                                android:textSize="14dp"
                                app:font="sanz.ttf" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/like"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="28dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/deal"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/car_details_kms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="2000kms"
                        android:textSize="14dp"
                        app:font="sanz.ttf" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">

                        <ImageView
                            android:id="@+id/chola"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:src="@drawable/chola" />
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/like_layout"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp">

                            <ImageView
                                android:id="@+id/car_saved"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp" />

                            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                android:id="@+id/like_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="Like"
                                android:textSize="14dp"
                                app:font="sanz.ttf" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/alert_layout"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/car_alert"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp" />

                            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                android:id="@+id/alert_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="Alert"
                                android:textSize="14dp"
                                app:font="sanz.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/compare_layout"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/car_compare"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/compare_car_gray" />

                            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                                android:id="@+id/compare_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="Compare"
                                android:textSize="14dp"
                                app:font="sanz.ttf" />
                        </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>