<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="vertical">


        <!--Header-->
        <LinearLayout
            android:id="@+id/header_search_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#173E84"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/apply_funding_confrm_back"
                    android:layout_width="30dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/back_arrow" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/title_saved_cars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:text="Apply Funding"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    app:font="sanz.ttf" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_search_list">

            <RelativeLayout
                android:id="@+id/blue_bg"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#173E84">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blue_bg"
                android:layout_toEndOf="@+id/card1"
                android:layout_toRightOf="@+id/card1">

                <ImageView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/confirm_funding" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/amount_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:text="Amount(\u20B9)"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    app:font="sanz.ttf" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Date"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    app:font="sanz.ttf" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CEditText
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount_info"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:text="11,100"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    app:font="sanz.ttf" />


                <ImageView
                    android:id="@+id/apply_funding_ownerimage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/amount"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/default_avatar" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/apply_funding_ownerimage"
                    android:text="Dealer Name"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    app:font="sanz.ttf" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/pan_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/apply_funding_ownerimage"
                    android:text="AXSH1234H"
                    android:textAllCaps="false"
                    android:textColor="#173E84"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:font="sanz.ttf" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/mobile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pan_number"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/apply_funding_ownerimage"
                    android:text="9090909090"
                    android:textColor="#B0B0B0"
                    android:textSize="14dp"
                    app:font="sanz.ttf" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobile_number"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/apply_funding_ownerimage"
                    android:text="sadsadsa@gmail.com"
                    android:textColor="#B0B0B0"
                    android:textSize="14dp"
                    app:font="sanz.ttf" />

            </RelativeLayout>

        </RelativeLayout>

        <ListView
            android:id="@+id/car_list_fund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_marginBottom="60dp" />

        <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
            android:id="@+id/submit_confirm"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="#FA2608"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="18dp"
            app:font="sanz.ttf" />

    </RelativeLayout>

</RelativeLayout>