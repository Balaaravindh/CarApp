<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/main_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textSize="18dp"
                android:textStyle="bold"
                app:font="sanz.ttf" />

            <ImageView
                android:id="@+id/location_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@+id/main_name"
                android:layout_marginTop="5dp"
                android:src="@drawable/location" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/location_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/location_image"
                android:maxLines="1"
                android:text="Thiruvanmiyur, Chennai, xxxxxxxxxxxxxxxxx"
                android:textSize="14dp"
                app:font="sanz.ttf" />

            <ImageView
                android:id="@+id/call_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@+id/location_image"
                android:layout_marginTop="5dp"
                android:src="@drawable/contact" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/call_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_image"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/call_image"
                android:text="9790037451"
                android:textSize="14dp"
                app:font="sanz.ttf" />

            <ImageView
                android:id="@+id/email_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@+id/call_image"
                android:layout_marginTop="5dp"
                android:src="@drawable/email" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/email_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/call_image"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/email_image"
                android:text="test@gmail.com"
                android:textSize="14dp"
                app:font="sanz.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1.0">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/head_quaters"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/headquater"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/service_center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/servicecenter"
                    android:visibility="gone" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/textviwe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="3dp"
                    android:text="Service Center"
                    android:textColor="#FFF"
                    android:textSize="10dp"
                    android:visibility="gone"
                    app:font="sanz.ttf" />

            </FrameLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>